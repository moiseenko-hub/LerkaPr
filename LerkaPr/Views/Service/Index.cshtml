@model List<ServiceViewModel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Обслуживание общежития";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить запись</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="width: 20%;">Тип</th>
            <th style="width: 45%;">Описание</th>
            <th style="width: 20%;">Дата</th>
            <th style="width: 15%;">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td title="@item.Type">
                    <span class="text-truncate d-inline-block" style="max-width: 180px;">@item.Type</span>
                </td>
                <td title="@item.Description">
                    <span class="text-truncate d-inline-block" style="max-width: 300px;">@item.Description</span>
                </td>
                <td>@item.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить запись?');">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
